}

article {
    flex: 1 1 auto;
    overflow: hidden;
    padding: 33px;

    pre {
        background: transparent;
        margin-top: 0;

        code {
            background: transparent;
        }
    }

    table {
        border-collapse: collapse;
        font-size: 14px;
        overflow: hidden;
        table-layout: fixed;

        table {
            table-layout: auto;
        }

        thead tr {
            border-bottom: 4px solid #3f454e;
        }

        tr:nth-child(n+2) {
            border-top: 1px solid #3f454e;
        }

        tbody td {
            vertical-align: top;
        }

        li {
            margin-bottom: 1rem;
        }

        pre {
            background: none !important;

            code {
                background: none !important;
                font-size: 14px;
                padding: 0;
            }
        }
    }

    .prop-row {
        &.prop-depth-1 {
            border-top-color: rgba(#303946, 0.75);

            td {
                font-size: 15px;

                &:first-child {
                    padding-left: 25px;

                    &::before {
                        content: '↳';
                        display: inline-block;
                        margin-right: 1em;
                    }
                }
            }
        }

        &.prop-depth-2 {
            border-top-color: rgba(#303946, 0.5);

            td {
                font-size: 14px;

                &:first-child {
                    padding-left: 55px;

                    &::before {
                        content: '↳';
                        display: inline-block;
                        margin-right: 1em;
                    }
                }
            }
        }
    }

    .prop-name {
        font-size: 16px;
        overflow: hidden;
        white-space: nowrap;
        width: 15vw;

        code {
            background: none !important;
        }
    }

    .prop-implementation {
        width: 33vw;

        h5 {
            font-size: 10px;
            font-weight: 400;
            margin-bottom: 0.5em;
            text-transform: uppercase;
        }

        h5:first-of-type {
            margin-top: 0;
        }
    }

    .prop-description {
        width: 33vw;

        table td {
            padding-right: 1rem;
        }
    }
}

.spread {
    display: flex;
    align-items: flex-start;
}

.spread > * {
    flex: 1 1 auto;
}

.align-end {
    align-items: flex-end;
}

.center {
    text-align: center;
}

@media all and (max-width: 1200px) {
    .boundless-nav {
        min-width: 260px;
    }
}

@media all and (max-width: 1024px) {
    main {
        flex-direction: column;

        article {
            order: 2;

            table {
                display: block;

                tbody {
                    display: block;
                }

                thead {
                    display: none;
                }

                tr {
                    border: 0 !important;
                    display: block;

                    ~ tr {
                        margin-top: 1.5rem;
                    }

                    &.prop-depth-1 {
                        padding-left: 1.5rem;

                        .prop-name::before {
                            display: none !important;
                        }
                    }

                    &.prop-depth-2 {
                        padding-left: 3rem;
                    }
                }

                td {
                    border-left 2px solid color-neutral-dark;
                    display: block;
                    padding-top: 0.5rem;
                    padding-bottom: 0.5rem;
                    max-width: 100% !important;
                    width: auto !important;

                    &:first-child {
                        display: block;
                        padding-left: 1rem !important;

                        &::before {
                            content: 'Name';
                            display: block;
                            @extend article .prop-implementation h5;
                        }
                    }
                }
            }
        }
    }

    nav {
        h4 {
            padding-top: 6px;
        }

        section {
            column-count: 3;
        }
    }

    .spread {
        flex-direction: column;

        > * {
            align-self: stretch;
            flex-shrink: 0;
            margin-left: 0 !important;
            margin-right: 0 !important;
            width: auto;

            & + * {
                margin-top: 1.5rem !important;
            }
        }
    }
}

@media all and (max-width: 600px) {
    nav {
        section {
            column-count: 2;
        }
    }
}
