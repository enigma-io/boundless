.props-section {
    margin-top: 2em;

    pre {
        margin-top: 0;

        code {
            font-size: inherit;
        }
    }

    table {
        border-collapse: collapse;

        thead tr {
            background: #ddd;

            th {
                padding: 0 0.5em;
            }
        }
    }

    .prop-row {
        border-left: 1px solid #ddd
        border-top: 1px solid #ddd;

        &:first-child {
            border-top: none;
        }

        &:last-child {
            border-bottom: 1px solid #ddd;
        }

        &.prop-depth-1 {
            border-top: none;

            td {
                font-size: 15px;

                &:first-child {
                    padding-left: 40px;
                }
            }
        }

        &.prop-depth-2 {
            border-top: none;

            td {
                font-size: 14px;

                &:first-child {
                    padding-left: 80px;
                }
            }
        }
    }
}

.spread {
    display: flex;
    align-items: flex-start;
}

.spread > * {
    flex: 100% 1 1;
}

.align-end {
    align-items: flex-end;
}

.center {
    text-align: center;
}

