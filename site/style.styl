@import "../style.styl"
@import "../packages/*/demo/*.styl"
@import "stars"
@import "syntax_highlighter"

*:last-child {
    margin-bottom: 0;
}

html {
    font-family: Lab Grotesque, Helvetica Neue, Helvetica, sans-serif;
    font-size: 16px;
}

body {
    background: #FFF;
    color: color-body;
    line-height: 1.4;
    overflow-x: hidden;
    margin: 0;
    padding: 0;
}

figure {
    margin: 0;
}

h1, h2, h3, h4, h5, h6 {
    margin: 1em 0 0.75rem;

    + h1, + h2, + h3, + h4, + h5, + h6 {
        margin-top: 0.5rem;
    }

    &:hover .anchor,
    &:focus .anchor,
    .anchor:focus,
    .anchor:hover {
        opacity: 1;
    }

    .anchor {
        margin-left: 5px;
        opacity: 0;
        text-decoration: none;
        transition: opacity 200ms ease-in-out;

        &::before {
            content: '#';
        }
    }

    &:first-child {
        margin-top: 0;
    }
}

h1 {
    font-size: 2rem;
}

h2 {
    font-size: 1.8rem;
}

h3 {
    font-size: 1.6rem;
    font-weight: 400;
}

h4 {
    font-size: 1.4rem;
    font-weight: 400;
}

h5 {
    font-size: 1.2rem;
    font-weight: 400;
}

h6 {
    font-size: 1rem;
    font-weight: 400;
}

p {
    margin: 0 0 1em;
}

ol ol {
    margin-top: 0.5rem;
}

ol li {
    margin-bottom: 0.5rem;
}

ul li {
    margin-bottom: 1rem;
}

li {
    &:last-child {
        margin-bottom: 0;
    }

    > p:last-child {
        margin-bottom: 0;
    }
}

li > strong + code::after {
    content: '';
    display: block;
}

li > p + pre code,
li > p + code {
    margin-top: 0;
}

li > p + ul,
li > p + ol {
    margin-top: -1em;
    padding-left: 0;

    li {
        list-style-type: none;
    }
}

li > pre,
li > code {
    margin: 0;

    + p {
        margin-top: 1em;
    }
}

li :not(pre) > code {
    display: inline-block;
}

hr {
    border: 0;
    border-top: 1px solid #CCC;
    margin: 2rem -2rem;
}

blockquote {
    background: rgba(gold, 0.1);
    margin: 0 0 1rem;
    padding: 1rem;

    > ul,
    > ol {
        list-style-position: inside;
        margin-left: 0;
        padding-left: 0;
    }
}

table {
    text-align: left;
    width: 100%;
}

th {
    padding-bottom: 0.5rem;
}

pre {
    background: #FFF;
    border-radius: borderRadius;
    color: get-foreground-text-color(color-accent);
    overflow-x: auto;
    margin: 1rem 0;
    padding: 0;

    > code {
        background: transparent;
        border-radius: 0;
        display: block;
        font-size: 0.8em;
        line-height: 1.5;
        padding: 0.75rem 1.5rem;
    }
}

code {
    background: rgba(color-accent, 0.05);
    border-radius: borderRadius;
    display: inline-block;
    font-size: 0.9em;
    margin-bottom: 0;
    padding: 0.1em 0.5em;
    text-decoration: inherit;
}

ul, ol, table, figure {
    margin-bottom: 2rem;
}

ul {
    padding-left: 1.3em;
}

ol {
    padding-left: 1.5em;
}

tbody td {
    min-width: 100px;
    padding: 0.5rem;
}

tbody tr:nth-child(even) {
    background-color: rgba(color-accent, 0.02);
}

::selection {
    background-color: invert(color-accent);
}

.splash {
    align-items: center;
    background: #000;
    height: 100vh;
    overflow: hidden; /* needed for starfield */
    position: relative;

    .splash-overlay {
        align-items: center;
        color: #f5f5f5;
        display: flex;
        flex-direction: column;
        height: 100vh;
        justify-content: space-between;
        width: 100vw;
        position: absolute;
        top: 0;

        .splash-tab {
            background: #fcfcfc;
            color: #111;
            padding: 15px 30px;
            text-align: center;

            &.splash-tab-upper {
                border-radius: 0 0 3px 3px;
                box-shadow: -5px 0px 5px cyan, 5px 0px 5px red;

                a {
                    text-decoration: none;
                    color: inherit;
                    font-weight: bold;
                }
            }

            &.splash-tab-lower {
                border-radius: 3px 3px 0 0;
                background: transparent;
                cursor: pointer;

                svg {
                    height: 196px;
                    width: 196px;
                    fill: #f5f5f5;
                }
            }
        }

        .splash-inner {
            text-align: center;

            h1 {
                font-size: 72px;
                text-shadow: -5px 0px 5px cyan, 5px 0px 5px red;
            }

            p {
                font-size: 28px;
            }
        }
    }
}

.sticky-bar {
    align-items: center;
    background: #000;
    border-bottom: 1px solid #111;
    display: flex;
    padding: 15px 30px;
    position: sticky;
    top: 0;
    z-index: 2;

    .sticky-bar-inner {
        align-items: center;
        display: flex;
        width: 100%;

        .sticky-bar-brand {
            color: #f5f5f5;
            display: inline-block;
            line-height:1;
            font-size: 26px;
            font-weight: bold;
            margin-right: 30px;
            text-decoration: none;
            text-shadow: -2.5px 0px 2.5px cyan, 2.5px 0px 2.5px red;

            &:hover {
                opacity: 0.5;
            }
        }

        .sticky-bar-menu-button {
            background: inherit;
            border: none;
            color: #f5f5f5;
            flex-shrink: 0;
            font-size: 16px;
            line-height: 1;
            outline: 0;
            width: auto;

            &:active,
            &:hover,
            &:focus {
                background: inherit;
                color: #f5f5f5;
            }

            &:active, &:hover {opacity: 0.5;}

            .sticky-bar-menu-button-inner {
                align-items: center;
                display: flex;

                svg {
                    margin-left: 3px;
                    height: 18px;
                    width: 18px;
                    fill: #f5f5f5;
                }
            }
        }

        .sticky-bar-search {
            flex-grow: 1;
            margin-left: 15px;

            .b-input {
                border-color: #f5f5f5;
                color: #f5f5f5;

                &:focus {
                    border-color: #f5f5f5;
                }
            }

            .b-input-placeholder {
                background: transparent;
                color: #f5f5f5;
            }
        }
    }
}

.sticky-bar-menu {
    border-radius: 0 0 3px 3px;
    border-top: none;
    padding: 7.5px 24px;
    transform: translate(-12px, 17px);

    a {
        display: block;
        color: #111;
        text-decoration: none;

        &:hover {
            cursor: pointer;
            opacity: 0.5;
        }
    }
}

.b-popover-caret {
    display: none;
}

.demo-section {
