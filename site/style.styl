// site-specific styles (not package-related ones)

@require "variables"
@require "code"

@font-face {
    font-family: 'Lab Grotesque';
    font-weight: 700;
    src: url(/assets/fonts/lab-grotesque/LabGrotesque-Bold.woff2) format('woff2'),
         url(/assets/fonts/lab-grotesque/LabGrotesque-Bold.woff) format('woff');
}

@font-face {
    font-family: 'Lab Grotesque';
    font-weight: 500;
    src: url(/assets/fonts/lab-grotesque/LabGrotesque-Medium.woff2) format('woff2'),
         url(/assets/fonts/lab-grotesque/LabGrotesque-Medium.woff) format('woff');
}

@font-face {
    font-family: 'Lab Grotesque';
    font-weight: 400;
    src: url(/assets/fonts/lab-grotesque/LabGrotesque-Regular.woff2) format('woff2'),
         url(/assets/fonts/lab-grotesque/LabGrotesque-Regular.woff) format('woff');
}

@font-face {
    font-family: 'Lab Grotesque';
    font-style: italic;
    font-weight: 400;
    src: url(/assets/fonts/lab-grotesque/LabGrotesque-Italic.woff2) format('woff2'),
         url(/assets/fonts/lab-grotesque/LabGrotesque-Italic.woff) format('woff');
}

@font-face {
    font-family: 'Lab Grotesque';
    font-weight: 300;
    src: url(/assets/fonts/lab-grotesque/LabGrotesque-Light.woff2) format('woff2'),
         url(/assets/fonts/lab-grotesque/LabGrotesque-Light.woff) format('woff');
}

*,
*::before,
*::after {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

*:last-child {
    margin-bottom: 0;
}

html {
    font-family: 'Lab Grotesque', Helvetica Neue, Helvetica, sans-serif;
    font-size: 16px;
}

body {
    background: body-backgroundColor;
    color: body-color;
    line-height: 1.4;
    overflow-x: hidden;
    margin: 0;
    padding: 0;
}

main {
    display: flex;
    justify-content: space-between;

    h1 {
        margin-top: 0;
    }

    :first-child {
        h2:first-child {
            margin-top: 0;
        }
    }
}

.boundless-nav {
    background: #535a66;
    color: body-color;
    flex-shrink: 0;
    min-width: 360px;
    padding: 24px;

    nav {
        font-size: 14px;
        line-height: 1;
        margin-top: 1rem;

        h4 {
            color: #FFF;
            font-size: inherit;
            font-weight: 400;
            line-height: 36px;
            margin: 0;
        }

        a {
            color: inherit;
            display: block;
            margin: 0 0 6px;
            padding-left: 10px;
            text-decoration: none;

            &:hover {
                color: #FFF;
            }

            &.active {
                border-left: 1px solid currentColor;
                color: #FFF;
                margin-left: -1px;
            }
        }
    }

    .brand {
        color: #f5f5f5;
        display: block;
        line-height: @height;
        font-size: 26px;
        font-weight: bold;
        margin-bottom: 1rem;
        padding: 0;
        text-decoration: none;

        &:hover {
            color: #FFF;
        }
    }

    .release-link {
        align-self: center;
        border: 1px solid;
        border-radius: borderRadius;
        color: inherit;
        font-size: 14px;
        line-height: 1;
        padding: 0.25em 0.5em;
        text-decoration: none;

        &:hover {
            color: #FFF;
        }
    }
}

figure {
    margin: 0;
}

h1, h2, h3, h4 {
    color: #FFF;
    margin: 1em 0 0.75rem;

    > a {
        color: #CCC;
        font-weight: 400;
        margin-left: 0.5rem;
        opacity: 0;
        text-decoration: none;
    }

    &:hover > a {
        opacity: 1;
    }

    + h1, + h2, + h3, + h4 {
        margin-top: 0.5rem;
    }

    &:hover .anchor,
    &:focus .anchor,
    .anchor:focus,
    .anchor:hover {
        opacity: 1;
    }

    .anchor {
        margin-left: 5px;
        opacity: 0;
        text-decoration: none;
        transition: opacity 200ms ease-in-out;

        &::before {
            content: '#';
        }
    }
}

h1 {
    font-size: 27px;
    font-weight: 300;
    margin-bottom: 1.5rem;
}

h2 {
    font-size: 18px;
    margin: 3rem 0 1.5rem;
}

h3 {
    font-size: 12px;
    font-weight: 400;
    margin: 3rem 0 1rem;
    text-transform: uppercase;
}

h4 {
    font-size: 14px;
    margin: 1rem 0;
}

a {
    color: #FFF;
}

strong {
    color: #FFF;
}

p {
    margin: 0 0 1.5rem;
}

ol ol {
    margin-top: 0.5rem;
}

ol li,
ul li {
    margin-bottom: 1.5rem;
}

li {
    &:last-child {
        margin-bottom: 0;
    }

    > p:last-child {
        margin-bottom: 0;
    }
}

li :not(pre) > code {
    display: inline-block;
}

hr {
    border: 0;
    border-top: 1px solid #CCC;
    margin: 2rem 0;
}

blockquote {
    border-left: 3px solid color-accent;
    font-size: 14px;
    font-style: italic;
    margin: 1.5rem 0;
    padding-left: 1rem;

    > ul,
    > ol {
        list-style-position: inside;
        margin-left: 0;
        padding-left: 0;
    }
}

table {
    text-align: left;
    width: 100%;
}

th {
    font-weight: 400;
    padding: 0.5em;
    white-space: nowrap;
}

pre {
    overflow-x: auto;
    margin: 1.5rem 0;
    padding: 0;

    > code {
        background: transparent;
        display: block;
        font-size: 0.8em;
        line-height: 1.5;
        padding: 0.75rem 1.5rem;
    }
}

code {
    background: #303946;
    color: #FFF;
    display: inline-block;
    font-family: Monaco, Consolas, Courier, monospace;
    font-size: 0.9em;
    margin-bottom: 0;
    padding: 0.1em;
    text-decoration: inherit;
}

ul, ol, table, figure {
    margin-bottom: 2rem;
}

ul {
    padding-left: 1.3em;
}

ol {
    padding-left: 1.5em;
}

th, td {
    padding: 1rem;

    &:first-of-type {
        padding-left: 0;
    }

    &:last-of-type {
        padding-right: 0;
    }
}

sub,
sup {
    font-size: 0.4em;
    font-weight: 400;
    margin-left: 0.5em;
}

::selection {
    background-color: rgba(color-accent, 0.25);
}

.demo-section-wrapper {
    background: #3f454e;
    border-top: 3px solid color-accent;
    color: #979fa8;
    margin: 3rem 0 0;
    padding: 12px 16px 15px;

    h1, h2, h3, h4, h5, h6 {
        margin-top: 1.5rem;

        &:first-child {
            margin-top: 0;
        }
    }

    .demo-implementation-disclosure .b-disclosure-toggle:focus {
        outline: 0;
    }

    .demo-implementation {
        height: auto;
        padding: 0;
    }

    .demo-section-example ~ * {
        margin-top: 1.5rem;
    }
}

